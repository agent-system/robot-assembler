(require :kxr_uav_fullbody)

(setq *robot* (kxr_uav_fullbody))
(objects (list *robot*))

(defun da()
  (send *irtviewer* :draw-objects)
  )

(defun reset-pose ()
  (send *robot* :init-pose)
  (send *robot* :rleg-crotch-p :joint-angle -30)
  (send *robot* :rleg-knee-p :joint-angle 60)
  (send *robot* :rleg-ankle-p :joint-angle -30)
  (send *robot* :lleg-crotch-p :joint-angle -30)
  (send *robot* :lleg-knee-p :joint-angle 60)
  (send *robot* :lleg-ankle-p :joint-angle -30)
  (send *robot* :rarm-shoulder-r :joint-angle 15)
  (send *robot* :rarm-shoulder-p :joint-angle -45)
  (send *robot* :rarm-elbow-p :joint-angle 60)
  (send *robot* :larm-shoulder-r :joint-angle 15)
  (send *robot* :larm-shoulder-p :joint-angle 45)
  (send *robot* :larm-elbow-p :joint-angle -60)
  (send *robot* :rtilt-r :joint-angle -90)
  (send *robot* :ltilt-r :joint-angle 90)
  (da)
  )
